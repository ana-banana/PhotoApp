<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_backgr"
    android:background="#7593b4"
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/my_profile_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="115dp"
        android:layout_weight="40">

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.5"
            android:id="@+id/line_on_top"
                android:layout_marginBottom="2dp"
            android:src="@drawable/linerose"
            android:layout_gravity="center" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
                android:background="#E6E6FA"
                android:paddingLeft="10dp"
            android:weightSum="100">

                <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                android:layout_weight="65">
                <ImageView
                    android:id="@+id/my_profile_photo"
                    android:src="@drawable/profile_picture_def"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:scaleType="fitCenter"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageFrame"
                    android:src="@drawable/profile_frame"
                    android:background="@null"
                    android:layout_alignParentStart="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>


                <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="New User"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="#7593b4"
                    android:layout_gravity="center"
                    android:id="@+id/profile_name"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="90"
        android:id="@+id/profile_button">

        <LinearLayout
            android:id="@+id/profile_button_something"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"

            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewMyPhotos"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:src="@drawable/gallery_button_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See my gallery"
                android:textSize="11dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:singleLine="false"
                android:textColor="#E6E6FA"
                android:id="@+id/go_to_gallery" />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/profile_button_number_friends"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
            android:clickable="true">


            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewFriends"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:src="@drawable/friends_button_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 friends"
                android:textSize="11dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:singleLine="false"
                android:textColor="#E6E6FA"
                android:id="@+id/how_many_friends" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile_button_manage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewManageProfile"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/manage_button" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Manage Profile"
                android:textSize="11dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#E6E6FA"
                android:id="@+id/textView6" />



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/profile_friends_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.5"
        android:id="@+id/imageView4"
        android:src="@drawable/linerose"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="My Friends:"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#E6E6FA"
        android:paddingTop="9dp"
        android:paddingBottom="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView4"
        android:textColor="#7593b4"
        android:singleLine="true" />

    <GridView
        android:id="@+id/profile_friends_gridview"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="#E6E6FA"
        android:paddingTop="5dp"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true">
    </GridView>

    </LinearLayout>


</LinearLayout>