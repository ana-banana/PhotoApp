<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7593b4"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <GridView
        android:id="@+id/fragment_gallery_ratings_gridView"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="#E6E6FA"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:layout_marginBottom="123dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true">
    </GridView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gallery"
        android:textSize="29dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#E6E6FA"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:id="@+id/textView4"
        android:autoText="false"
        android:allowUndo="false"
        android:textColor="#7593b4"
        android:singleLine="false"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/fragment_gallery_ratings_gridView"
        android:layout_alignEnd="@+id/fragment_gallery_ratings_gridView"
        android:layout_alignLeft="@+id/fragment_gallery_ratings_gridView"
        android:layout_alignStart="@+id/fragment_gallery_ratings_gridView" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.5"
        android:id="@+id/imageView4"
        android:src="@drawable/linerose"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />



</RelativeLayout>