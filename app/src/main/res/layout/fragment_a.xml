<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce5ff"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <GridView
        android:id="@+id/activity_main_gridView"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="#E6E6FA"
        android:paddingTop="75dp"
        android:layout_height="300dp"
        android:layout_marginTop="127dp"
        android:layout_below="@+id/imageButtonReset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:numColumns="auto_fit">
    </GridView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/imageButtonReset"
        android:src="@drawable/resetgallery"
        android:background="#cce5ff"

        android:layout_above="@+id/textViewAddPhotoButton"
        android:layout_alignRight="@+id/imageButtonOrderUpload"

        android:foregroundGravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageButtonAddPhoto"
        android:src="@drawable/addphotobutton"
        android:background="#cce5ff"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonRating"
        android:layout_toStartOf="@+id/imageButtonRating"
        android:foregroundGravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageButtonRating"
        android:src="@drawable/ratephotobutton"
        android:background="#cce5ff"
        android:layout_above="@+id/activity_main_gridView"
        android:layout_toLeftOf="@+id/imageButtonGridView"
        android:layout_toStartOf="@+id/imageButtonGridView"
        android:foregroundGravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonGridView"
        android:layout_marginLeft="10dp"
        android:src="@drawable/gridvbutton"
        android:background="#cce5ff"
        android:layout_above="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:foregroundGravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reset"
        android:textStyle="bold"
        android:id="@+id/textViewResetButton"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageButtonReset"
        android:foregroundGravity="center_horizontal"
        android:layout_alignLeft="@+id/imageButtonReset"
        android:layout_alignStart="@+id/imageButtonReset"
        android:layout_alignRight="@+id/imageButtonReset"
        android:layout_alignEnd="@+id/imageButtonReset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add photo"
        android:textStyle="bold"
        android:id="@+id/textViewAddPhotoButton"
        android:textSize="12dp"
        android:layout_below="@+id/imageButtonAddPhoto"
        android:layout_alignLeft="@+id/imageButtonAddPhoto"
        android:layout_alignStart="@+id/imageButtonAddPhoto"
        android:foregroundGravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ratings"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:textSize="12dp"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/imageButtonRating"
        android:layout_alignStart="@+id/imageButtonRating"
        android:layout_alignTop="@+id/textViewAddPhotoButton"
        android:textAlignment="center"
        android:foregroundGravity="center_horizontal"
        android:layout_alignRight="@+id/imageButtonRating"
        android:layout_alignEnd="@+id/imageButtonRating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gallery:"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#E6E6FA"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="60dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textViewAddPhotoButton"
        android:layout_alignLeft="@+id/activity_main_gridView"
        android:layout_alignStart="@+id/activity_main_gridView"
        android:layout_alignRight="@+id/activity_main_gridView"
        android:layout_alignEnd="@+id/activity_main_gridView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/backgr"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gallery"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView3"
        android:textSize="12dp"
        android:gravity="center|fill"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/imageButtonGridView"
        android:layout_alignStart="@+id/imageButtonGridView"
        android:foregroundGravity="center_horizontal"
        android:layout_alignRight="@+id/imageButtonGridView"
        android:layout_alignEnd="@+id/imageButtonGridView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E6E6FA"
        android:id="@+id/imageButtonOrderRating"
        android:src="@drawable/basedonrating"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E6E6FA"
        android:id="@+id/imageButtonOrderUpload"
        android:src="@drawable/basedonupload"
        android:layout_above="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageButtonAddPhoto"
        android:layout_toStartOf="@+id/imageButtonAddPhoto" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/backgr2"
        android:layout_alignTop="@+id/activity_main_gridView"
        android:layout_alignLeft="@+id/activity_main_gridView"
        android:layout_alignStart="@+id/activity_main_gridView"
        android:layout_alignRight="@+id/activity_main_gridView"
        android:layout_alignEnd="@+id/activity_main_gridView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/backgr3"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
