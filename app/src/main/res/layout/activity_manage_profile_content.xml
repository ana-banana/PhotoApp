<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manage_profile_backgr"
    android:background="#7593b4">

    <LinearLayout
        android:id="@+id/my_profile_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.5"
            android:id="@+id/line_on_top"
            android:layout_marginBottom="2dp"
            android:src="@drawable/linerose"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#E6E6FA"
            android:paddingLeft="10dp"
            android:weightSum="100">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_weight="65">
                <ImageView
                    android:id="@+id/my_profile_photo_manage"
                    android:src="@drawable/profile_picture_def"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:scaleType="fitCenter"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageFrame"
                    android:src="@drawable/profile_frame"
                    android:background="@null"
                    android:layout_alignParentStart="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewTouchHint"
                    android:background="@null"
                    android:src="@drawable/touch_hint"
                    android:layout_marginBottom="25dp"
                    android:layout_alignBottom="@+id/my_profile_photo_manage"
                    android:layout_alignRight="@+id/my_profile_photo_manage"
                    android:layout_alignEnd="@+id/my_profile_photo_manage" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="35">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="#7593b4"
                    android:textColorHint="#7593b4"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/edit_profile_name_manage"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile_info"
        android:layout_marginTop="25dp"
        android:background="#E6E6FA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="#E6E6FA"
        android:id="@+id/imageButtonSaveChanges"
        android:src="@drawable/save_changes_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your changes have been saved"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="#7593b4"
        android:padding = "5dp"
        android:visibility="gone"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#91E070"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/textSavedChanges"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>